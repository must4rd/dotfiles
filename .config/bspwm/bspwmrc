bspc rule -a Conky state=floating manage=off
bspc rule -a stalonetray state=floating manage=off

###############
## autostart ##
###############

# Load bitmap fonts
xset fp+ ~/.fonts/misc &

## reload compton
pkill compton
compton -b &

# system tray
pkill stalonetray
stalonetray &

# network applet
nm-applet &

# clipboard manager
pkill clipit
clipit &

# volume icon
# pkill volumeicon
# volumeicon &

# pasystray
pkill pasystray
pasystray &

# keybind daemon
pkill sxhkd
sxhkd &

## music is my only friend :(
mpd &

## reload the xsettingsd, a minimal x settings daemon
pkill xsettingsd
xsettingsd &

## set the wallpaper
feh --bg-fill ~/.wallpaper.jpg

## load dunst
pkill dunst
dunst &

## guake dropdown term
pkill guake
guake &

## reload the cursor theme
xsetroot -cursor_name left_ptr

## load panel script
pkill panel-bspwm
pkill panel-bspwm2
pkill panel-bspwm3
pkill panel-bspwm4
#panel-bspwm &
testpanel &
panel-bspwm4 &

xmodmap /home/must4rd/.Xmodmap &
